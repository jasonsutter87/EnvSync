# EnvSync Docker Configuration
# Copy this file to .env and update the values

# ===================
# Security (REQUIRED)
# ===================
SECRET_KEY=your-very-secure-secret-key-min-32-chars
JWT_SECRET_KEY=your-jwt-secret-key-min-32-chars

# ===================
# Database
# ===================
POSTGRES_USER=envsync
POSTGRES_PASSWORD=your-secure-database-password
POSTGRES_DB=envsync

# ===================
# Application
# ===================
DEBUG=false
API_PORT=8000
WEB_PORT=3000

# JWT token expiration (minutes)
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30

# CORS origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# ===================
# VeilCloud (Optional)
# ===================
VEILCLOUD_API_URL=https://api.veilcloud.io
VEILCLOUD_API_KEY=

# ===================
# SSO/OIDC (Optional)
# ===================
SSO_ENABLED=false
OIDC_ISSUER_URL=
OIDC_CLIENT_ID=
OIDC_CLIENT_SECRET=

# ===================
# Service Integrations (Optional)
# ===================
NETLIFY_CLIENT_ID=
NETLIFY_CLIENT_SECRET=
VERCEL_CLIENT_ID=
VERCEL_CLIENT_SECRET=
RAILWAY_CLIENT_ID=
RAILWAY_CLIENT_SECRET=

# ===================
# Production (Optional)
# ===================
# Enable nginx reverse proxy profile
# docker-compose --profile production up
NGINX_PORT=80
NGINX_SSL_PORT=443

# Frontend runtime config
API_URL=http://api:8000
VEILCLOUD_URL=https://api.veilcloud.io
FEATURE_SYNC=true
FEATURE_TEAMS=true
FEATURE_INTEGRATIONS=true
