{
  "name": "envsync",
  "version": "0.1.0",
  "description": "Zero-knowledge .env manager - Sync secrets. Not trust.",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:run": "vitest run",
    "test:e2e": "playwright test --project=e2e-chromium",
    "test:e2e:all": "playwright test",
    "test:e2e:smoke": "playwright test --project=smoke",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "test:e2e:report": "playwright show-report",
    "test:api": "playwright test --project=api",
    "test:integration": "playwright test --project=integration",
    "test:visual": "playwright test --project=visual",
    "test:mobile": "playwright test --project=mobile-chrome --project=mobile-safari",
    "test:all": "npm run test:run && npm run test:e2e:all",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "overrides": [
      {
        "files": "*.html",
        "options": {
          "parser": "angular"
        }
      }
    ]
  },
  "private": true,
  "packageManager": "npm@11.6.2",
  "dependencies": {
    "@angular/common": "^21.0.0",
    "@angular/compiler": "^21.0.0",
    "@angular/core": "^21.0.0",
    "@angular/forms": "^21.0.0",
    "@angular/platform-browser": "^21.0.0",
    "@angular/platform-browser-dynamic": "^21.0.6",
    "@angular/router": "^21.0.0",
    "@tauri-apps/api": "^2.9.1",
    "monaco-editor": "^0.52.2",
    "ngx-monaco-editor-v2": "^18.0.4",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0"
  },
  "devDependencies": {
    "@analogjs/vitest-angular": "^2.2.0",
    "@angular/build": "^21.0.4",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.0",
    "@playwright/test": "^1.49.0",
    "@tailwindcss/forms": "^0.5.11",
    "@tauri-apps/cli": "^2.9.6",
    "@vitest/coverage-v8": "^4.0.8",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.23",
    "jsdom": "^27.1.0",
    "postcss": "^8.5.6",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.2",
    "vitest": "^4.0.8",
    "zone.js": "^0.15.0"
  }
}
